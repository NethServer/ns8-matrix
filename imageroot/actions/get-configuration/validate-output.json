{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "get-configuration output",
    "$id": "http://schema.nethserver.org/matrix/get-configuration-output.json",
    "description": "Get Matrix configuration",
    "examples": [
        {
            "synapse_domain_name": "matrix.example.com",
            "element_domain_name": "chat.example.com",
            "cinny_domain_name": "cinny.example.com",
            "lets_encrypt": true,
            "dex_ldap_domain": "users.example.com",
            "mail_from": "noreply@example.com",
            "enable_element": true,
            "enable_cinny": false
        }
    ],
    "type": "object",
    "properties": {
        "synapse_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Matrix homeserver"
        },
        "element_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Element web client"
        },
        "cinny_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Cinny client"
        },
        "lets_encrypt": {
            "type": "boolean",
            "description": "Enable Let's Encrypt certificate management"
        },
        "dex_ldap_domain": {
            "type": "string",
            "description": "LDAP domain name for Dex authentication (optional)",
            "format": "domain-name"
        },
        "mail_from": {
            "title": "Email from address",
            "type": "string",
            "oneOf": [
                {
                    "type": "string",
                    "format": "email"
                },
                {
                    "type": "string",
                    "maxLength": 0
                }
            ]
        },
        "enable_element": {
            "type": "boolean",
            "description": "Enable Element web client"
        },
        "enable_cinny": {
            "type": "boolean",
            "description": "Enable Cinny client"
        }
    }
}
