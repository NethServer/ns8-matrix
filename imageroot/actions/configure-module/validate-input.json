{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/matrix/configure-module-input.json",
    "description": "Configure Matrix chat service",
    "examples": [
        {
            "synapse_domain_name": "matrix.example.com",
            "element_domain_name": "chat.example.com",
            "cinny_domain_name": "cinny.example.com",
            "lets_encrypt": true,
            "dex_ldap_domain": "users.example.com",
            "mail_from": "noreply@example.com",
            "enable_element": true,
            "enable_cinny": false
        }
    ],
    "type": "object",
    "required": [
        "synapse_domain_name",
        "element_domain_name",
        "cinny_domain_name",
        "lets_encrypt",
        "dex_ldap_domain",
        "enable_element",
        "enable_cinny"
    ],
    "properties": {
        "synapse_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Matrix homeserver",
            "format": "hostname",
            "minLength": 1
        },
        "element_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Element web client",
            "format": "hostname",
            "minLength": 1
        },
        "cinny_domain_name": {
            "type": "string",
            "description": "Fully qualified domain name for the Cinny client",
            "format": "hostname",
            "minLength": 1
        },
        "lets_encrypt": {
            "type": "boolean",
            "description": "Enable Let's Encrypt certificate management"
        },
        "dex_ldap_domain": {
            "type": "string",
            "description": "LDAP domain name for Dex authentication (optional)",
            "format": "domain-name"
        },
        "mail_from": {
            "title": "Email from address",
            "type": "string",
            "oneOf": [
                {
                    "type": "string",
                    "format": "email"
                },
                {
                    "type": "string",
                    "maxLength": 0
                }
            ]
	},
        "enable_element": {
            "type": "boolean",
            "description": "Enable Element web client"
        },
        "enable_cinny": {
            "type": "boolean",
            "description": "Enable Cinny client"
        }
    }
}
